end

def moengage_pods
  pod 'MoEngage-iOS-SDK', '~> 9.17.5'
  pod 'MoEngageInApp', '~> 6.0.3'
end

def firebase_pods
  pod 'Firebase/Auth', '~> 10.25'
  pod 'Firebase/Core', '~> 10.25'
  pod 'Firebase/Messaging', '~> 10.25'
  pod 'Firebase/InAppMessaging'
