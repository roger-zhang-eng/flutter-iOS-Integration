  pod 'SVGKit', '~> 3.0.0'
  pod 'SwiftEntryKit', '~> 2.0.0'
  pod 'IQKeyboardManagerSwift', '~> 6.5.11'
  pod 'UITextView+Placeholder', '~> 1.4.0'
  pod 'MHLoadingButton', '~> 0.1.3'
  pod 'RxSwift', '~> 6.6'
  pod 'RxCocoa'
  pod 'RxOptional'
  pod 'RxDataSources'
  pod 'RxKeyboard'
